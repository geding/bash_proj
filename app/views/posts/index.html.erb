<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Content</th>
    <th>Likes</th>
    <th>Dislikes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.author %></td>
    <td><%= post.content %></td>
    <td><%= post.likes %></td>
     <td><%= post.likes_n %></td>
    <td><%= post.dislikes_n %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
